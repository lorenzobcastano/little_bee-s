<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card-body text-center">
          <h2 class="card-title">Create a new sell</h2>
            <%= simple_form_for([@product, @sell]) do |f| %>
              <div class="form-group">
                <%= f.hidden_field :user_id, value: current_user.id %>
              </div>
              <div class="form-group">
                <%= f.hidden_field :product_ids, value: @product.id %>
              </div>
              <p class="card-text"><%= "You are making this sell " + @product.name + " for $" + @product.price.to_s %></p>
              <div class="text-center">
                <%= f.submit 'Create', class: 'btn btn-success' %> <%= link_to " Cancel purchase", product_path(@product), class: "btn btn-danger" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
